<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".activities.SelectModalityActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="316dp"
        android:layout_height="272dp"
        app:layout_constraintBottom_toTopOf="@+id/ultrasoundButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086"
        app:srcCompat="@drawable/women_logo_removed_bg" />

    <Button
        android:id="@+id/ultrasoundButton"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:text="Ultrasound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/mammographyButton"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Mammography"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ultrasoundButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="338dp"
        android:layout_height="116dp"
        android:layout_marginBottom="164dp"
        android:background="#000000"
        android:text="Transforming the way we approach breast health. Upload your mammogram or ultrasound below and let our innovative AI models provide an instant classification and localisation of breast tumors. "
        android:textAlignment="viewStart"
        android:textColor="#F1D0DB"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ultrasoundButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="375dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:text="* Please note that while we strive for accuracy, this app is intended as a supportive tool and does not replace professional medical advice."
        android:textColor="#F1D0DB"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mammographyButton" />


</androidx.constraintlayout.widget.ConstraintLayout>
